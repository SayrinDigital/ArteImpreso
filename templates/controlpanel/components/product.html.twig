        </div>

        <div class="uk-card-footer">

                                      <div class="uk-text-center">

                                        <a href="#product-modal-edit-{{ product.id }}" uk-toggle class="link-d uk-button uk-margin-small-right"> <span class="uk-icon" uk-tooltip="Editar" uk-icon="icon: pencil;"></span> </a>
                                          <a class="delete-product-button link-c uk-button" data-productid="{{ product.id }}"> <span class="uk-icon" uk-tooltip="Eliminar" uk-icon="icon: trash;"></span> </a>

                                      </div>
        </div>


    </div>

</div>

<div id="product-modal-edit-{{ product.id }}" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
            <h2 class="uk-modal-title">Modificar Producto</h2>
        </div>
        <div class="uk-modal-body">
          <form >
              <fieldset class="uk-fieldset">

                  <div class="uk-margin">
                      <input class="uk-input" id="product-name-{{ product.id }}" type="text" placeholder="Nombre" value="{{ product.name }}" required>
                  </div>

                  <div class="uk-margin">
                      <input class="uk-input" id="product-price-{{ product.id }}" type="text" placeholder="Precio" value="{{ product.price }}" required>
                  </div>
                  <div class="uk-margin">
                      <textarea class="uk-textarea" id="product-desc-{{ product.id }}" rows="2" type="text" placeholder="DescripciÃ³n" required>{{ product.description }}</textarea>

                  </div>

                  <div class="uk-margin">

      <div class="uk-margin">
          <select class="uk-select" id="product-category-{{ product.id }}">
              <option value="{{ product.category.id }}" hidden selected>{{ product.category.name }}</option>
              {{ render(controller(
                    'App\\Controller\\ControlPanelController::fillProductCategoriesProduct'
                )) }}
          </select>
      </div>
                  </div>

